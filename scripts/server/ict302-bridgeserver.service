[Unit]
Description=ICT302 Node.js Server for a Interactive Dashboard(multi-command)
After=network-online.target
Wants=network-online.target

[Service]
User=root
Group=root
WorkingDirectory=/opt/DynamicPopulationDensity/src/server/frontend/hive-matrix/hivemetrics-bridge/
ExecStart=usr/bin/npm run dev
Restart=on-failure
RestartSec=5
Environment=NODE_ENV=production PORT=8080

[Install]
WantedBy=multi-user.target

